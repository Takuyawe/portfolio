---
import '../styles/global.css';
import { Icon } from 'astro-icon/components';
import animationData from "../../public/animated-icons/mouse.json"
import MouseWheel from "../components/MouseWheel"
import type { onPageLoad } from 'astro/virtual-modules/transitions-events.js';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-gray-900 overflow-hidden">
    <div class="fixed top-12 left-12 cursor-pointer text-white hover:text-gray-200 text-3xl flex item-center justify-center gap-x-2"><Icon class="inline size-6 self-center" name="terminal" />DVLPR</div>
    <div
      class="hover:bg-gray-100 rounded-md fixed top-10 right-12 h-12 w-32 outline outline-1 outline-gray-100 flex items-center justify-center">
      <button class="h-12 w-32 text-gray-100 hover:text-gray-800"
        >Contact</button
      >
    </div>
    <div
      class="fixed bottom-12 left-12 bg-white hover:bg-gray-200 rounded-full cursor-pointer">
      <Icon class="h-10 w-10" name="github" />
    </div>
    <!-- TODO: Scroll to Top if pageId is 4 -->
    <div
      class="flex items-center gap-x-1 fixed bottom-12 right-6 text-white hover:text-gray-300 cursor-pointer text-sm [writing-mode:vertical-lr]">
      Scroll to Bottom <Icon class="inline" name="down-arrow" />
    </div>
    <div class="fixed bottom-12 left-1/2 h-12 w-12 bg-gray-300 rounded-lg opacity-80">
      <MouseWheel client:load animationData={animationData} />
    </div>
    <slot />
  </body>
</html>